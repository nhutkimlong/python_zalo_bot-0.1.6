# Token bot Zalo - Lấy từ Zalo Developer Console
ZALO_BOT_TOKEN=your_zalo_bot_token_here

# Base URL for Zalo API - Thay thế với bot token thực tế
BASE_URL=https://bot-api.zapps.me/bot[YOUR_BOT_TOKEN]

# Gemini AI API Key (lấy từ https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model Configuration
GEMINI_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# Supabase Configuration - Lấy từ Supabase Dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Cấu hình webhook (tùy chọn)
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_SECRET=your_webhook_secret_token

# Thông tin liên hệ
HOTLINE=0276 3823.378
ADMIN_PHONE=0123456789

ADMIN_EMAIL=admin@example.com
AI_TABLE=ai_knowledge_base
POI_TABLE=poi
HOURS_TABLE=poi_operating_hours

SUNWORLD_SUBSCRIPTION_KEY=your_sunworld_api_key_here

# Logging Configuration
# LOG_LEVEL=INFO (chỉ hiển thị thông tin quan trọng)
# LOG_LEVEL=DEBUG (hiển thị tất cả log chi tiết)
LOG_LEVEL=INFO

